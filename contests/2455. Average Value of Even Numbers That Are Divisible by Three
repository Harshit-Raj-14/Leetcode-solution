class Solution {
    public int averageValue(int[] nums){
        int count=0;
        int sum=0;
        for(int i=0;i<nums.length;i++){
            if(nums[i]%2==0 && nums[i]%3==0){   //if(nums[i]%6==0) =>divisibility test of 6
                sum+=nums[i];   
                count++;
            }
        }
        if(count!=0) return sum/count;  //count==0 => sum=0 => can't do 0/0 
        else return 0;
    }
}
