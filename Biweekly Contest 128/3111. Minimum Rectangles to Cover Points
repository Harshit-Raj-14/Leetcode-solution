class Solution {
    public int minRectanglesToCoverPoints(int[][] points, int w) {
        int arr[] = new int[points.length];
        for(int i=0;i<points.length;i++){
            arr[i]=points[i][0];
        }
        Arrays.sort(arr);
        int rect=0;
        for(int i=0;i<arr.length;i++){
            int leftside=arr[i];
            rect++;
            while(i+1<arr.length && arr[i+1]-leftside<=w){
                i++;
            }
        }
        return rect;
    }
}